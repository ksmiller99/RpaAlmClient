@page "/"

<PageTitle>RPA ALM Client - Home</PageTitle>

<MudText Typo="Typo.h3" Class="mb-4">RPA Application Lifecycle Management</MudText>
<MudText Typo="Typo.h6" Color="Color.Secondary" Class="mb-6">Web Client - Powered by Blazor Server</MudText>

<MudGrid>
    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-2">
                <MudIcon Icon="@Icons.Material.Filled.List" Class="mr-2" />
                Reference Data
            </MudText>
            <MudText Class="mb-3">Manage lookup tables and reference data for the RPA platform.</MudText>
            <MudButton Href="/status" Variant="Variant.Outlined" Color="Color.Primary">Manage Reference Data</MudButton>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-2">
                <MudIcon Icon="@Icons.Material.Filled.SmartToy" Class="mr-2" />
                Core Entities
            </MudText>
            <MudText Class="mb-3">Manage automations, SLAs, virtual identities, and more.</MudText>
            <MudButton Href="/automation" Variant="Variant.Outlined" Color="Color.Primary">Manage Automations</MudButton>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-2">
                <MudIcon Icon="@Icons.Material.Filled.People" Class="mr-2" />
                Helper Tables
            </MudText>
            <MudText Class="mb-3">Employee directory and CMDB application cache.</MudText>
            <MudButton Href="/jjedshelper" Variant="Variant.Outlined" Color="Color.Primary">View Helper Data</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudDivider Class="my-6" />

<MudText Typo="Typo.h5" Class="mb-4">Features</MudText>
<MudGrid>
    <MudItem xs="12" md="6">
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                <MudText><b>22 Entity Types</b> - Complete CRUD operations</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                <MudText><b>Shared Libraries</b> - Reuses Models and API Clients</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                <MudText><b>Responsive Design</b> - Works on desktop and mobile</MudText>
            </MudListItem>
        </MudList>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                <MudText><b>Real-time Updates</b> - Blazor Server interactivity</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                <MudText><b>Material Design</b> - Modern UI with MudBlazor</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                <MudText><b>Monorepo Architecture</b> - Zero code duplication</MudText>
            </MudListItem>
        </MudList>
    </MudItem>
</MudGrid>
