@page "/medal"
@rendermode InteractiveServer
@inject MedalApiClient ApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Medal Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Medal Management</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2">
            <MudDataGrid T="MedalDto" Items="@entities" Dense="true" Hover="true"
                         Loading="@loading" RowClick="@OnRowClick" SelectedItemChanged="@OnRowSelected">
                <Columns>
                    <PropertyColumn Property="x => x.Id" Title="ID" />
                    <PropertyColumn Property="x => x.Code" Title="Code" />
                    <PropertyColumn Property="x => x.Description" Title="Description" />
                </Columns>
            </MudDataGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-4">@(isEditing ? "Edit Medal" : "Add New Medal")</MudText>

            <EditForm Model="@currentEntity" OnValidSubmit="HandleSubmit" FormName="MedalForm">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <MudTextField @bind-Value="currentEntity.Code"
                              Label="Code"
                              Required="true"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudTextField @bind-Value="currentEntity.Description"
                              Label="Description"
                              Lines="3"
                              Margin="Margin.Dense"
                              Class="mb-4" />

                <MudStack Row="true" Spacing="2" Class="mt-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@(isEditing ? Icons.Material.Filled.Save : Icons.Material.Filled.Add)">
                        @(isEditing ? "Update" : "Add")
                    </MudButton>
                    <MudButton OnClick="ClearForm"
                               Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Filled.Clear">
                        Clear
                    </MudButton>
                    <MudButton OnClick="HandleDelete"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               Disabled="@(!isEditing)"
                               StartIcon="@Icons.Material.Filled.Delete">
                        Delete
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private List<MedalDto> entities = new();
    private MedalDto currentEntity = new();
    private int? selectedId;
    private bool isEditing => selectedId.HasValue;
    private bool loading;

    protected override async Task OnInitializedAsync()
    {
        await LoadEntitiesAsync();
    }

    private async Task LoadEntitiesAsync()
    {
        loading = true;
        try
        {
            entities = await ApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void OnRowClick(DataGridRowClickEventArgs<MedalDto> args)
    {
        // Row selection handled by SelectedItemChanged
    }

    private void OnRowSelected(MedalDto? selected)
    {
        if (selected != null)
        {
            selectedId = selected.Id;
            currentEntity = new MedalDto
            {
                Code = selected.Code,
                Description = selected.Description
            };
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (isEditing)
            {
                var request = new MedalUpdateRequest
                {
                    Code = currentEntity.Code?.Trim(),
                    Description = currentEntity.Description?.Trim()
                };
                await ApiClient.UpdateAsync(selectedId!.Value, request);
                Snackbar.Add("Medal updated successfully", Severity.Success);
            }
            else
            {
                var request = new MedalCreateRequest
                {
                    Code = currentEntity.Code?.Trim(),
                    Description = currentEntity.Description?.Trim()
                };
                await ApiClient.CreateAsync(request);
                Snackbar.Add("Medal created successfully", Severity.Success);
            }

            await LoadEntitiesAsync();
            ClearForm();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleDelete()
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this medal?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                await ApiClient.DeleteAsync(selectedId!.Value);
                Snackbar.Add("Medal deleted successfully", Severity.Success);
                await LoadEntitiesAsync();
                ClearForm();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private void ClearForm()
    {
        selectedId = null;
        currentEntity = new MedalDto();
    }
}
