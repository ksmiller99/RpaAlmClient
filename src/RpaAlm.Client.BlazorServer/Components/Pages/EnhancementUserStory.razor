@page "/enhancementuserstory"
@rendermode InteractiveServer
@inject EnhancementUserStoryApiClient ApiClient
@inject EnhancementApiClient EnhancementApiClient
@inject StoryPointCostApiClient StoryPointCostApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Enhancement User Story Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Enhancement User Story Management</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2">
            <MudDataGrid T="EnhancementUserStoryDto" Items="@entities" Dense="true" Hover="true"
                         Loading="@loading" RowClick="@OnRowClick" SelectedItemChanged="@OnRowSelected">
                <Columns>
                    <PropertyColumn Property="x => x.Id" Title="ID" />
                    <PropertyColumn Property="x => x.JiraIssue" Title="Jira Issue" />
                    <PropertyColumn Property="x => x.StoryPoints" Title="Story Points" />
                    <PropertyColumn Property="x => x.EnhancementID" Title="Enhancement" />
                </Columns>
            </MudDataGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4" Style="max-height: 600px; overflow-y: auto;">
            <MudText Typo="Typo.h6" Class="mb-4">@(isEditing ? "Edit User Story" : "Add New User Story")</MudText>

            <EditForm Model="@currentEntity" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <MudSelect @bind-Value="currentEntity.EnhancementID"
                           Label="Enhancement"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var enhancement in enhancements)
                    {
                        <MudSelectItem Value="@((int?)enhancement.Id)">@enhancement.Code</MudSelectItem>
                    }
                </MudSelect>

                <MudTextField @bind-Value="currentEntity.JiraIssue"
                              Label="Jira Issue"
                              MaxLength="50"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudNumericField @bind-Value="currentEntity.StoryPoints"
                                 Label="Story Points"
                                 Min="0"
                                 Margin="Margin.Dense"
                                 Class="mb-3" />

                <MudTextField @bind-Value="currentEntity.JiraIssueLink"
                              Label="Jira Issue Link"
                              MaxLength="500"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudTextField @bind-Value="currentEntity.JiraIssueSummary"
                              Label="Jira Issue Summary"
                              MaxLength="500"
                              Lines="3"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudSelect @bind-Value="currentEntity.StoryPointCostID"
                           Label="Story Point Cost"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-4">
                    @foreach (var cost in storyPointCosts)
                    {
                        <MudSelectItem Value="@((int?)cost.Id)">@cost.Code</MudSelectItem>
                    }
                </MudSelect>

                <MudStack Row="true" Spacing="2" Class="mt-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@(isEditing ? Icons.Material.Filled.Save : Icons.Material.Filled.Add)">
                        @(isEditing ? "Update" : "Add")
                    </MudButton>
                    <MudButton OnClick="ClearForm"
                               Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Filled.Clear">
                        Clear
                    </MudButton>
                    <MudButton OnClick="HandleDelete"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               Disabled="@(!isEditing)"
                               StartIcon="@Icons.Material.Filled.Delete">
                        Delete
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private List<EnhancementUserStoryDto> entities = new();
    private EnhancementUserStoryDto currentEntity = new();
    private int? selectedId;
    private bool isEditing => selectedId.HasValue;
    private bool loading;

    private List<EnhancementDto> enhancements = new();
    private List<StoryPointCostDto> storyPointCosts = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceDataAsync();
        await LoadEntitiesAsync();
    }

    private async Task LoadReferenceDataAsync()
    {
        try
        {
            enhancements = await EnhancementApiClient.GetAllAsync();
            storyPointCosts = await StoryPointCostApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading reference data: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadEntitiesAsync()
    {
        loading = true;
        try
        {
            entities = await ApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void OnRowClick(DataGridRowClickEventArgs<EnhancementUserStoryDto> args)
    {
        // Row selection handled by SelectedItemChanged
    }

    private void OnRowSelected(EnhancementUserStoryDto? selected)
    {
        if (selected != null)
        {
            selectedId = selected.Id;
            currentEntity = new EnhancementUserStoryDto
            {
                EnhancementID = selected.EnhancementID,
                JiraIssue = selected.JiraIssue,
                StoryPoints = selected.StoryPoints,
                JiraIssueLink = selected.JiraIssueLink,
                JiraIssueSummary = selected.JiraIssueSummary,
                StoryPointCostID = selected.StoryPointCostID
            };
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (isEditing)
            {
                var request = new EnhancementUserStoryUpdateRequest
                {
                    EnhancementID = currentEntity.EnhancementID,
                    JiraIssue = currentEntity.JiraIssue?.Trim(),
                    StoryPoints = currentEntity.StoryPoints,
                    JiraIssueLink = currentEntity.JiraIssueLink?.Trim(),
                    JiraIssueSummary = currentEntity.JiraIssueSummary?.Trim(),
                    StoryPointCostID = currentEntity.StoryPointCostID
                };
                await ApiClient.UpdateAsync(selectedId!.Value, request);
                Snackbar.Add("Enhancement User Story updated successfully", Severity.Success);
            }
            else
            {
                var request = new EnhancementUserStoryCreateRequest
                {
                    EnhancementID = currentEntity.EnhancementID,
                    JiraIssue = currentEntity.JiraIssue?.Trim(),
                    StoryPoints = currentEntity.StoryPoints,
                    JiraIssueLink = currentEntity.JiraIssueLink?.Trim(),
                    JiraIssueSummary = currentEntity.JiraIssueSummary?.Trim(),
                    StoryPointCostID = currentEntity.StoryPointCostID
                };
                await ApiClient.CreateAsync(request);
                Snackbar.Add("Enhancement User Story created successfully", Severity.Success);
            }

            await LoadEntitiesAsync();
            ClearForm();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleDelete()
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this enhancement user story?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                await ApiClient.DeleteAsync(selectedId!.Value);
                Snackbar.Add("Enhancement User Story deleted successfully", Severity.Success);
                await LoadEntitiesAsync();
                ClearForm();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private void ClearForm()
    {
        selectedId = null;
        currentEntity = new EnhancementUserStoryDto();
    }
}
