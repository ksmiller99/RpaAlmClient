@page "/slaitem"
@rendermode InteractiveServer
@inject SlaItemApiClient ApiClient
@inject SlaMasterApiClient SlaMasterApiClient
@inject SlaItemTypeApiClient SlaItemTypeApiClient
@inject EnhancementApiClient EnhancementApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>SLA Item Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">SLA Item Management</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2">
            <MudDataGrid T="SlaItemDto" Items="@entities" Dense="true" Hover="true"
                         Loading="@loading" RowClick="@OnRowClick" SelectedItemChanged="@OnRowSelected">
                <Columns>
                    <PropertyColumn Property="x => x.Id" Title="ID" />
                    <PropertyColumn Property="x => x.SlaMasterID" Title="SLA Master" />
                    <PropertyColumn Property="x => x.SlaItemTypeID" Title="Type" />
                    <PropertyColumn Property="x => x.EnhancementID" Title="Enhancement" />
                </Columns>
            </MudDataGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-4">@(isEditing ? "Edit SLA Item" : "Add New SLA Item")</MudText>

            <EditForm Model="@currentEntity" OnValidSubmit="HandleSubmit">
                <MudSelect @bind-Value="currentEntity.SlaMasterID"
                           Label="SLA Master"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var master in slaMasters)
                    {
                        <MudSelectItem Value="@((int?)master.Id)">ID: @master.Id</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect @bind-Value="currentEntity.SlaItemTypeID"
                           Label="SLA Item Type"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var type in slaItemTypes)
                    {
                        <MudSelectItem Value="@((int?)type.Id)">@type.Code</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect @bind-Value="currentEntity.EnhancementID"
                           Label="Enhancement"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-4">
                    @foreach (var enhancement in enhancements)
                    {
                        <MudSelectItem Value="@((int?)enhancement.Id)">@enhancement.Code</MudSelectItem>
                    }
                </MudSelect>

                <MudStack Row="true" Spacing="2" Class="mt-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@(isEditing ? Icons.Material.Filled.Save : Icons.Material.Filled.Add)">
                        @(isEditing ? "Update" : "Add")
                    </MudButton>
                    <MudButton OnClick="ClearForm"
                               Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Filled.Clear">
                        Clear
                    </MudButton>
                    <MudButton OnClick="HandleDelete"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               Disabled="@(!isEditing)"
                               StartIcon="@Icons.Material.Filled.Delete">
                        Delete
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private List<SlaItemDto> entities = new();
    private SlaItemDto currentEntity = new();
    private int? selectedId;
    private bool isEditing => selectedId.HasValue;
    private bool loading;

    private List<SlaMasterDto> slaMasters = new();
    private List<SlaItemTypeDto> slaItemTypes = new();
    private List<EnhancementDto> enhancements = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceDataAsync();
        await LoadEntitiesAsync();
    }

    private async Task LoadReferenceDataAsync()
    {
        try
        {
            slaMasters = await SlaMasterApiClient.GetAllAsync();
            slaItemTypes = await SlaItemTypeApiClient.GetAllAsync();
            enhancements = await EnhancementApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading reference data: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadEntitiesAsync()
    {
        loading = true;
        try
        {
            entities = await ApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void OnRowClick(DataGridRowClickEventArgs<SlaItemDto> args)
    {
        // Row selection handled by SelectedItemChanged
    }

    private void OnRowSelected(SlaItemDto? selected)
    {
        if (selected != null)
        {
            selectedId = selected.Id;
            currentEntity = new SlaItemDto
            {
                SlaMasterID = selected.SlaMasterID,
                SlaItemTypeID = selected.SlaItemTypeID,
                EnhancementID = selected.EnhancementID
            };
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (isEditing)
            {
                var request = new SlaItemUpdateRequest
                {
                    SlaMasterID = currentEntity.SlaMasterID,
                    SlaItemTypeID = currentEntity.SlaItemTypeID,
                    EnhancementID = currentEntity.EnhancementID
                };
                await ApiClient.UpdateAsync(selectedId!.Value, request);
                Snackbar.Add("SLA Item updated successfully", Severity.Success);
            }
            else
            {
                var request = new SlaItemCreateRequest
                {
                    SlaMasterID = currentEntity.SlaMasterID,
                    SlaItemTypeID = currentEntity.SlaItemTypeID,
                    EnhancementID = currentEntity.EnhancementID
                };
                await ApiClient.CreateAsync(request);
                Snackbar.Add("SLA Item created successfully", Severity.Success);
            }

            await LoadEntitiesAsync();
            ClearForm();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleDelete()
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this SLA item?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                await ApiClient.DeleteAsync(selectedId!.Value);
                Snackbar.Add("SLA Item deleted successfully", Severity.Success);
                await LoadEntitiesAsync();
                ClearForm();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private void ClearForm()
    {
        selectedId = null;
        currentEntity = new SlaItemDto();
    }
}
