@page "/cmdbhelper"
@rendermode InteractiveServer
@inject CmdbHelperApiClient ApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>CMDB Helper Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">CMDB Helper Management</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2">
            <MudDataGrid T="CmdbHelperDto" Items="@entities" Dense="true" Hover="true"
                         Loading="@loading" RowClick="@OnRowClick" SelectedItemChanged="@OnRowSelected">
                <Columns>
                    <PropertyColumn Property="x => x.AppId" Title="App ID" />
                    <PropertyColumn Property="x => x.Name" Title="Name" />
                    <PropertyColumn Property="x => x.Zcode" Title="Z-Code" />
                </Columns>
            </MudDataGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-4">@(isEditing ? "Edit CMDB Helper" : "Add New CMDB Helper")</MudText>

            <EditForm Model="@currentEntity" OnValidSubmit="HandleSubmit" FormName="CmdbHelperForm">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <MudTextField @bind-Value="currentEntity.AppId"
                              Label="App ID"
                              Required="true"
                              MaxLength="50"
                              Disabled="@isEditing"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudTextField @bind-Value="currentEntity.Name"
                              Label="Name"
                              MaxLength="255"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudTextField @bind-Value="currentEntity.Zcode"
                              Label="Z-Code"
                              MaxLength="50"
                              Margin="Margin.Dense"
                              Class="mb-4" />

                <MudStack Row="true" Spacing="2" Class="mt-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@(isEditing ? Icons.Material.Filled.Save : Icons.Material.Filled.Add)">
                        @(isEditing ? "Update" : "Add")
                    </MudButton>
                    <MudButton OnClick="ClearForm"
                               Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Filled.Clear">
                        Clear
                    </MudButton>
                    <MudButton OnClick="HandleDelete"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               Disabled="@(!isEditing)"
                               StartIcon="@Icons.Material.Filled.Delete">
                        Delete
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private List<CmdbHelperDto> entities = new();

    [SupplyParameterFromForm]
    private CmdbHelperDto currentEntity { get; set; } = new();

    private string? selectedAppId;
    private bool isEditing => !string.IsNullOrEmpty(selectedAppId);
    private bool loading;

    protected override async Task OnInitializedAsync()
    {
        await LoadEntitiesAsync();
    }

    private async Task LoadEntitiesAsync()
    {
        loading = true;
        try
        {
            entities = await ApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void OnRowClick(DataGridRowClickEventArgs<CmdbHelperDto> args)
    {
        // Row selection handled by SelectedItemChanged
    }

    private void OnRowSelected(CmdbHelperDto? selected)
    {
        if (selected != null)
        {
            selectedAppId = selected.AppId;
            currentEntity = new CmdbHelperDto
            {
                AppId = selected.AppId,
                Name = selected.Name,
                Zcode = selected.Zcode
            };
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (isEditing)
            {
                // Parse AppId as int for API call (if it's numeric)
                if (int.TryParse(selectedAppId, out int appIdAsInt))
                {
                    var request = new CmdbHelperUpdateRequest
                    {
                        Name = currentEntity.Name?.Trim(),
                        Zcode = currentEntity.Zcode?.Trim()
                    };
                    await ApiClient.UpdateAsync(appIdAsInt, request);
                    Snackbar.Add("CMDB Helper updated successfully", Severity.Success);
                }
                else
                {
                    Snackbar.Add("Error: App ID must be numeric", Severity.Error);
                    return;
                }
            }
            else
            {
                var request = new CmdbHelperCreateRequest
                {
                    AppId = currentEntity.AppId?.Trim() ?? string.Empty,
                    Name = currentEntity.Name?.Trim(),
                    Zcode = currentEntity.Zcode?.Trim()
                };
                await ApiClient.CreateAsync(request);
                Snackbar.Add("CMDB Helper created successfully", Severity.Success);
            }

            await LoadEntitiesAsync();
            ClearForm();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleDelete()
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this CMDB helper?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                // Parse AppId as int for API call
                if (int.TryParse(selectedAppId, out int appIdAsInt))
                {
                    await ApiClient.DeleteAsync(appIdAsInt);
                    Snackbar.Add("CMDB Helper deleted successfully", Severity.Success);
                    await LoadEntitiesAsync();
                    ClearForm();
                }
                else
                {
                    Snackbar.Add("Error: App ID must be numeric", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private void ClearForm()
    {
        selectedAppId = null;
        currentEntity = new CmdbHelperDto();
    }
}
