@page "/automationenvironment"
@rendermode InteractiveServer
@inject AutomationEnvironmentApiClient ApiClient
@inject AutomationApiClient AutomationApiClient
@inject AutomationEnvironmentTypeApiClient AutomationEnvironmentTypeApiClient
@inject CmdbHelperApiClient CmdbHelperApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Automation Environment Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Automation Environment Management</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2">
            <MudDataGrid T="AutomationEnvironmentDto" Items="@entities" Dense="true" Hover="true"
                         Loading="@loading" RowClick="@OnRowClick" SelectedItemChanged="@OnRowSelected">
                <Columns>
                    <PropertyColumn Property="x => x.Id" Title="ID" />
                    <PropertyColumn Property="x => x.AutomationID" Title="Automation" />
                    <PropertyColumn Property="x => x.AppID" Title="App ID" />
                    <PropertyColumn Property="x => x.EnvironmentTypeID" Title="Environment Type" />
                </Columns>
            </MudDataGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-4">@(isEditing ? "Edit Automation Environment" : "Add New Automation Environment")</MudText>

            <EditForm Model="@currentEntity" OnValidSubmit="HandleSubmit" FormName="AutomationEnvironmentForm">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <MudSelect @bind-Value="currentEntity.AutomationID"
                           Label="Automation"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var automation in automations)
                    {
                        <MudSelectItem Value="@((int?)automation.Id)">@automation.Name</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect @bind-Value="currentEntity.AppID"
                           Label="Application (CMDB)"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var app in applications)
                    {
                        <MudSelectItem Value="@app.AppId">@app.AppId - @app.Name</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect @bind-Value="currentEntity.EnvironmentTypeID"
                           Label="Environment Type"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-4">
                    @foreach (var envType in environmentTypes)
                    {
                        <MudSelectItem Value="@((int?)envType.Id)">@envType.Code</MudSelectItem>
                    }
                </MudSelect>

                <MudStack Row="true" Spacing="2" Class="mt-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@(isEditing ? Icons.Material.Filled.Save : Icons.Material.Filled.Add)">
                        @(isEditing ? "Update" : "Add")
                    </MudButton>
                    <MudButton OnClick="ClearForm"
                               Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Filled.Clear">
                        Clear
                    </MudButton>
                    <MudButton OnClick="HandleDelete"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               Disabled="@(!isEditing)"
                               StartIcon="@Icons.Material.Filled.Delete">
                        Delete
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private List<AutomationEnvironmentDto> entities = new();

    [SupplyParameterFromForm]
    private AutomationEnvironmentDto currentEntity { get; set; } = new();

    private int? selectedId;
    private bool isEditing => selectedId.HasValue;
    private bool loading;

    private List<AutomationDto> automations = new();
    private List<CmdbHelperDto> applications = new();
    private List<AutomationEnvironmentTypeDto> environmentTypes = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceDataAsync();
        await LoadEntitiesAsync();
    }

    private async Task LoadReferenceDataAsync()
    {
        try
        {
            automations = await AutomationApiClient.GetAllAsync();
            applications = await CmdbHelperApiClient.GetAllAsync();
            environmentTypes = await AutomationEnvironmentTypeApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading reference data: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadEntitiesAsync()
    {
        loading = true;
        try
        {
            entities = await ApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void OnRowClick(DataGridRowClickEventArgs<AutomationEnvironmentDto> args)
    {
        // Row selection handled by SelectedItemChanged
    }

    private void OnRowSelected(AutomationEnvironmentDto? selected)
    {
        if (selected != null)
        {
            selectedId = selected.Id;
            currentEntity = new AutomationEnvironmentDto
            {
                AutomationID = selected.AutomationID,
                AppID = selected.AppID,
                EnvironmentTypeID = selected.EnvironmentTypeID
            };
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (isEditing)
            {
                var request = new AutomationEnvironmentUpdateRequest
                {
                    AutomationID = currentEntity.AutomationID,
                    AppID = currentEntity.AppID?.Trim(),
                    EnvironmentTypeID = currentEntity.EnvironmentTypeID
                };
                await ApiClient.UpdateAsync(selectedId!.Value, request);
                Snackbar.Add("Automation Environment updated successfully", Severity.Success);
            }
            else
            {
                var request = new AutomationEnvironmentCreateRequest
                {
                    AutomationID = currentEntity.AutomationID,
                    AppID = currentEntity.AppID?.Trim(),
                    EnvironmentTypeID = currentEntity.EnvironmentTypeID
                };
                await ApiClient.CreateAsync(request);
                Snackbar.Add("Automation Environment created successfully", Severity.Success);
            }

            await LoadEntitiesAsync();
            ClearForm();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleDelete()
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this automation environment?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                await ApiClient.DeleteAsync(selectedId!.Value);
                Snackbar.Add("Automation Environment deleted successfully", Severity.Success);
                await LoadEntitiesAsync();
                ClearForm();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private void ClearForm()
    {
        selectedId = null;
        currentEntity = new AutomationEnvironmentDto();
    }
}
