@page "/slalogentry"
@rendermode InteractiveServer
@inject SlaLogEntryApiClient ApiClient
@inject SlaMasterApiClient SlaMasterApiClient
@inject JjedsHelperApiClient JjedsHelperApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>SLA Log Entry Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">SLA Log Entry Management</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2">
            <MudDataGrid T="SlaLogEntryDto" Items="@entities" Dense="true" Hover="true"
                         Loading="@loading" RowClick="@OnRowClick" SelectedItemChanged="@OnRowSelected">
                <Columns>
                    <PropertyColumn Property="x => x.Id" Title="ID" />
                    <PropertyColumn Property="x => x.SlaMasterID" Title="SLA Master" />
                    <PropertyColumn Property="x => x.CreatedWWID" Title="Created By" />
                    <PropertyColumn Property="x => x.CreatedDate" Title="Date" Format="yyyy-MM-dd" />
                    <PropertyColumn Property="x => x.Comment" Title="Comment" />
                </Columns>
            </MudDataGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6" Class="mb-4">@(isEditing ? "Edit Log Entry" : "Add New Log Entry")</MudText>

            <EditForm Model="@currentEntity" OnValidSubmit="HandleSubmit" FormName="SlaLogEntryForm">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <MudSelect @bind-Value="currentEntity.SlaMasterID"
                           Label="SLA Master"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var master in slaMasters)
                    {
                        <MudSelectItem Value="@((int?)master.Id)">ID: @master.Id</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect @bind-Value="currentEntity.CreatedWWID"
                           Label="Created By (WWID)"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var employee in employees)
                    {
                        <MudSelectItem Value="@employee.Wwid">@employee.Wwid - @employee.CommonName</MudSelectItem>
                    }
                </MudSelect>

                <MudDatePicker @bind-Date="createdDate"
                               Label="Created Date"
                               Margin="Margin.Dense"
                               Class="mb-3" />

                <MudTextField @bind-Value="currentEntity.Comment"
                              Label="Comment"
                              Lines="5"
                              Margin="Margin.Dense"
                              Class="mb-4" />

                <MudStack Row="true" Spacing="2" Class="mt-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@(isEditing ? Icons.Material.Filled.Save : Icons.Material.Filled.Add)">
                        @(isEditing ? "Update" : "Add")
                    </MudButton>
                    <MudButton OnClick="ClearForm"
                               Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Filled.Clear">
                        Clear
                    </MudButton>
                    <MudButton OnClick="HandleDelete"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               Disabled="@(!isEditing)"
                               StartIcon="@Icons.Material.Filled.Delete">
                        Delete
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private List<SlaLogEntryDto> entities = new();
    private SlaLogEntryDto currentEntity = new();
    private int? selectedId;
    private bool isEditing => selectedId.HasValue;
    private bool loading;
    private DateTime? createdDate;

    private List<SlaMasterDto> slaMasters = new();
    private List<JjedsHelperDto> employees = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceDataAsync();
        await LoadEntitiesAsync();
    }

    private async Task LoadReferenceDataAsync()
    {
        try
        {
            slaMasters = await SlaMasterApiClient.GetAllAsync();
            employees = await JjedsHelperApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading reference data: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadEntitiesAsync()
    {
        loading = true;
        try
        {
            entities = await ApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void OnRowClick(DataGridRowClickEventArgs<SlaLogEntryDto> args)
    {
        // Row selection handled by SelectedItemChanged
    }

    private void OnRowSelected(SlaLogEntryDto? selected)
    {
        if (selected != null)
        {
            selectedId = selected.Id;
            currentEntity = new SlaLogEntryDto
            {
                SlaMasterID = selected.SlaMasterID,
                CreatedWWID = selected.CreatedWWID,
                CreatedDate = selected.CreatedDate,
                Comment = selected.Comment
            };
            createdDate = selected.CreatedDate;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            currentEntity.CreatedDate = createdDate;

            if (isEditing)
            {
                var request = new SlaLogEntryUpdateRequest
                {
                    SlaMasterID = currentEntity.SlaMasterID,
                    CreatedWWID = currentEntity.CreatedWWID?.Trim(),
                    CreatedDate = currentEntity.CreatedDate,
                    Comment = currentEntity.Comment?.Trim()
                };
                await ApiClient.UpdateAsync(selectedId!.Value, request);
                Snackbar.Add("SLA Log Entry updated successfully", Severity.Success);
            }
            else
            {
                var request = new SlaLogEntryCreateRequest
                {
                    SlaMasterID = currentEntity.SlaMasterID,
                    CreatedWWID = currentEntity.CreatedWWID?.Trim(),
                    CreatedDate = currentEntity.CreatedDate,
                    Comment = currentEntity.Comment?.Trim()
                };
                await ApiClient.CreateAsync(request);
                Snackbar.Add("SLA Log Entry created successfully", Severity.Success);
            }

            await LoadEntitiesAsync();
            ClearForm();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleDelete()
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this SLA log entry?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                await ApiClient.DeleteAsync(selectedId!.Value);
                Snackbar.Add("SLA Log Entry deleted successfully", Severity.Success);
                await LoadEntitiesAsync();
                ClearForm();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private void ClearForm()
    {
        selectedId = null;
        currentEntity = new SlaLogEntryDto();
        createdDate = null;
    }
}
