@page "/virtualidentity"
@rendermode InteractiveServer
@inject VirtualIdentityApiClient ApiClient
@inject ADDomainApiClient ADDomainApiClient
@inject JjedsHelperApiClient JjedsHelperApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Virtual Identity Management</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Virtual Identity Management</MudText>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2">
            <MudDataGrid T="VirtualIdentityDto" Items="@entities" Dense="true" Hover="true"
                         Loading="@loading" RowClick="@OnRowClick" SelectedItemChanged="@OnRowSelected">
                <Columns>
                    <PropertyColumn Property="x => x.Id" Title="ID" />
                    <PropertyColumn Property="x => x.AccountName" Title="Account Name" />
                    <PropertyColumn Property="x => x.HostName" Title="Host Name" />
                    <PropertyColumn Property="x => x.WWID" Title="WWID" />
                    <PropertyColumn Property="x => x.IPv4" Title="IPv4" />
                </Columns>
            </MudDataGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-4" Style="max-height: 700px; overflow-y: auto;">
            <MudText Typo="Typo.h6" Class="mb-4">@(isEditing ? "Edit Virtual Identity" : "Add New Virtual Identity")</MudText>

            <EditForm Model="@currentEntity" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <MudTextField @bind-Value="currentEntity.AccountName"
                              Label="Account Name"
                              MaxLength="100"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudTextField @bind-Value="currentEntity.HostName"
                              Label="Host Name"
                              MaxLength="100"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudSelect @bind-Value="currentEntity.WWID"
                           Label="WWID (Owner)"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var employee in employees)
                    {
                        <MudSelectItem Value="@employee.Wwid">@employee.Wwid - @employee.CommonName</MudSelectItem>
                    }
                </MudSelect>

                <MudTextField @bind-Value="currentEntity.IPv4"
                              Label="IPv4 Address"
                              MaxLength="15"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudSelect @bind-Value="currentEntity.ADDomainID"
                           Label="AD Domain"
                           Clearable="true"
                           Margin="Margin.Dense"
                           Class="mb-3">
                    @foreach (var domain in adDomains)
                    {
                        <MudSelectItem Value="@((int?)domain.Id)">@domain.Code</MudSelectItem>
                    }
                </MudSelect>

                <MudTextField @bind-Value="currentEntity.Email"
                              Label="Email"
                              InputType="InputType.Email"
                              MaxLength="255"
                              Margin="Margin.Dense"
                              Class="mb-3" />

                <MudDatePicker @bind-Date="createdDate"
                               Label="Created Date"
                               Margin="Margin.Dense"
                               Class="mb-3" />

                <MudDatePicker @bind-Date="retiredDate"
                               Label="Retired Date"
                               Margin="Margin.Dense"
                               Class="mb-4" />

                <MudStack Row="true" Spacing="2" Class="mt-4">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@(isEditing ? Icons.Material.Filled.Save : Icons.Material.Filled.Add)">
                        @(isEditing ? "Update" : "Add")
                    </MudButton>
                    <MudButton OnClick="ClearForm"
                               Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               StartIcon="@Icons.Material.Filled.Clear">
                        Clear
                    </MudButton>
                    <MudButton OnClick="HandleDelete"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               Disabled="@(!isEditing)"
                               StartIcon="@Icons.Material.Filled.Delete">
                        Delete
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private List<VirtualIdentityDto> entities = new();
    private VirtualIdentityDto currentEntity = new();
    private int? selectedId;
    private bool isEditing => selectedId.HasValue;
    private bool loading;
    private DateTime? createdDate;
    private DateTime? retiredDate;

    private List<ADDomainDto> adDomains = new();
    private List<JjedsHelperDto> employees = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceDataAsync();
        await LoadEntitiesAsync();
    }

    private async Task LoadReferenceDataAsync()
    {
        try
        {
            adDomains = await ADDomainApiClient.GetAllAsync();
            employees = await JjedsHelperApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading reference data: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadEntitiesAsync()
    {
        loading = true;
        try
        {
            entities = await ApiClient.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void OnRowClick(DataGridRowClickEventArgs<VirtualIdentityDto> args)
    {
        // Row selection handled by SelectedItemChanged
    }

    private void OnRowSelected(VirtualIdentityDto? selected)
    {
        if (selected != null)
        {
            selectedId = selected.Id;
            currentEntity = new VirtualIdentityDto
            {
                AccountName = selected.AccountName,
                HostName = selected.HostName,
                WWID = selected.WWID,
                IPv4 = selected.IPv4,
                ADDomainID = selected.ADDomainID,
                Email = selected.Email,
                Created = selected.Created,
                Retired = selected.Retired
            };
            createdDate = selected.Created;
            retiredDate = selected.Retired;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            currentEntity.Created = createdDate;
            currentEntity.Retired = retiredDate;

            if (isEditing)
            {
                var request = new VirtualIdentityUpdateRequest
                {
                    AccountName = currentEntity.AccountName?.Trim(),
                    HostName = currentEntity.HostName?.Trim(),
                    WWID = currentEntity.WWID?.Trim(),
                    IPv4 = currentEntity.IPv4?.Trim(),
                    ADDomainID = currentEntity.ADDomainID,
                    Email = currentEntity.Email?.Trim(),
                    Created = currentEntity.Created,
                    Retired = currentEntity.Retired
                };
                await ApiClient.UpdateAsync(selectedId!.Value, request);
                Snackbar.Add("Virtual Identity updated successfully", Severity.Success);
            }
            else
            {
                var request = new VirtualIdentityCreateRequest
                {
                    AccountName = currentEntity.AccountName?.Trim(),
                    HostName = currentEntity.HostName?.Trim(),
                    WWID = currentEntity.WWID?.Trim(),
                    IPv4 = currentEntity.IPv4?.Trim(),
                    ADDomainID = currentEntity.ADDomainID,
                    Email = currentEntity.Email?.Trim(),
                    Created = currentEntity.Created,
                    Retired = currentEntity.Retired
                };
                await ApiClient.CreateAsync(request);
                Snackbar.Add("Virtual Identity created successfully", Severity.Success);
            }

            await LoadEntitiesAsync();
            ClearForm();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleDelete()
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this virtual identity?",
            yesText: "Delete", cancelText: "Cancel");

        if (confirm == true)
        {
            try
            {
                await ApiClient.DeleteAsync(selectedId!.Value);
                Snackbar.Add("Virtual Identity deleted successfully", Severity.Success);
                await LoadEntitiesAsync();
                ClearForm();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private void ClearForm()
    {
        selectedId = null;
        currentEntity = new VirtualIdentityDto();
        createdDate = null;
        retiredDate = null;
    }
}
